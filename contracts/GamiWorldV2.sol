pragma solidity ^0.8.17;

import {ERC20} from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {ERC20Permit} from "@openzeppelin/contracts/token/ERC20/extensions/ERC20Permit.sol";

contract GamiWorldV2 is ERC20, ERC20Permit {
    
    // 131,256,399.938392 GAMI old Total Supply multiplied by 10 ** 12 for 18 decimals
    uint256 public constant MAX_SUPPLY = 131256399938392 * 10 ** 12; 

    constructor(address tokenDistributorContract) ERC20("GamiWorld", "GAMI") ERC20Permit("GamiWorld") {
        _mint(tokenDistributorContract, MAX_SUPPLY);
    }

    function burn(uint256 value) external {
        _burn(msg.sender, value);
    }
}
